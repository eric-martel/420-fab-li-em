int nbUnites = Convert.ToInt32(Console.ReadLine());

Console.Write("Prix unitaire: ");
decimal prixUnitaire = Convert.ToDecimal(Console.ReadLine());

Console.Write("TPS (%): ");
decimal pctTPS = Convert.ToDecimal(Console.ReadLine()) / 100m;

Console.Write("TVQ (%): ");
decimal pctTVQ = Convert.ToDecimal(Console.ReadLine()) / 100m;

decimal sousTotal = nbUnites * prixUnitaire;
decimal TPS = Math.Round(sousTotal * pctTPS, 2);
decimal TVQ = Math.Round(sousTotal * pctTVQ, 2);
decimal total = sousTotal + TPS + TVQ;

Console.WriteLine();
