Console.WriteLine("{0, 10} {1, 14:c} {2, 14:c}", nbUnites, prixUnitaire, sousTotal);
Console.WriteLine();
Console.WriteLine("{0, 10} {1, 14:c} {2, 14:c}", "", "TPS:", TPS);
