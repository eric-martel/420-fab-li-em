class Aleatoire
{
    static private readonly Random rnd = new Random();

    public double Reel(double n)
    {
        // Le +1e-6 s'assure que le n soit inclus, bien qu'on puisse le dépasser légèrement
        return rnd.NextDouble() * (n + 1e-6);
    }
}
